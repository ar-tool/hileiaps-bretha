<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/common_dialog_bg">


        <TextView
            android:id="@+id/voice_call"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            app:drawableStartCompat="@drawable/icon_company"
            android:drawablePadding="20dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="语音通话"
            android:textColor="@color/black_color"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toBottomOf="@id/center_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/video_call"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            app:drawableStartCompat="@drawable/icon_phone"
            android:drawablePadding="20dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="视频通话"
            android:textColor="@color/black_color"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/center_guide" />

        <View
            android:id="@+id/center_guide"
            android:layout_width="308dp"
            android:layout_height="@dimen/divide_height_size"
            android:background="@color/list_divider_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
