    <item android:width="142dp" android:height="39dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff2f3f6" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" />
