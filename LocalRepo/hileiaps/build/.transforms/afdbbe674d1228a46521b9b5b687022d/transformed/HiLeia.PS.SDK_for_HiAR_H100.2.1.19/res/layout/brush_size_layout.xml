<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_brush_size"
    android:layout_width="@dimen/toolbar_width"
    android:layout_height="wrap_content">

    <com.hiscene.presentation.ui.widget.HiAlphaImageButton
        android:id="@+id/btn_choose_size1"
        android:layout_width="@dimen/color_item_icon_width"
        android:layout_height="@dimen/color_item_icon_height"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="true"
        android:padding="5dp"
        android:src="@drawable/size_1_selected"
        app:layout_constraintBottom_toTopOf="@+id/btn_choose_size2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="ContentDescription" />


    <com.hiscene.presentation.ui.widget.HiAlphaImageButton
        android:id="@+id/btn_choose_size2"
        android:layout_width="@dimen/color_item_icon_width"
        android:layout_height="@dimen/color_item_icon_height"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="true"
        android:padding="5dp"
        android:src="@drawable/size_2"
        app:layout_constraintBottom_toTopOf="@+id/btn_choose_size3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_size1"
        tools:ignore="ContentDescription" />


    <com.hiscene.presentation.ui.widget.HiAlphaImageButton
        android:id="@+id/btn_choose_size3"
        android:layout_width="@dimen/color_item_icon_width"
        android:layout_height="@dimen/color_item_icon_height"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="true"
        android:padding="5dp"
        android:src="@drawable/size_3"
        app:layout_constraintBottom_toTopOf="@+id/btn_choose_size4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_size2"
        tools:ignore="ContentDescription" />

    <com.hiscene.presentation.ui.widget.HiAlphaImageButton
        android:id="@+id/btn_choose_size4"
        android:layout_width="@dimen/color_item_icon_width"
        android:layout_height="@dimen/color_item_icon_height"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="true"
        android:padding="5dp"
        android:src="@drawable/size_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_size3"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>