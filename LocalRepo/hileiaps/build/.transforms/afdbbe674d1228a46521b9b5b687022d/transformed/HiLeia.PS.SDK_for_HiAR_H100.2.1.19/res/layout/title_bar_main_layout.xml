<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/back_tv"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_back_selector"
        android:layout_marginEnd="10dp"
        android:focusable="true"
        android:clickable="true" />

    <com.hiscene.publiclib.widget.MediumBoldTextView
        android:id="@+id/title_main_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:textSize="18sp"
        android:textColor="@color/background_dark"
        android:textStyle="normal"
        tools:text="消息"/>

    <ImageView
        android:id="@+id/title_main_search_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search_selector"
        android:textSize="16sp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/title_main_add_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_add_selector"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        tools:ignore="ContentDescription" />
</LinearLayout>
